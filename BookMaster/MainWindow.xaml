<Window x:Class="BookMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookMaster"
        mc:Ignorable="d"
        Title="Bookmaster3000" Height="900" Width="1600"
        MinHeight="720" MinWidth="1280"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Вход в ситему"/>
                <MenuItem Header="Выход из ситемы"/>
                <MenuItem Header="Закрыть приложения"/>
            </MenuItem>
            <MenuItem Header="Библиотека">
            <MenuItem Header="Просмоотр катологов"/>
            <MenuItem Header="Управления читателями"/>
            <MenuItem Header="Управления абониментом"/>
            <MenuItem Header="Отчёты"/>
            </MenuItem>

        </Menu>
        <Frame Name="MainFrame" Grid.Row="2"/>

    </Grid>
</Window>
